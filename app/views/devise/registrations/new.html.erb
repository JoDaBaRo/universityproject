<div id="sign_up_form">
  <% header "Sign Up" %>
  <div class="container">
  <div class="row justify-content-center"><h2>Registrarse</h2></div>
  <div class="row justify-content-center">
    <div class="col-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :nombre %><br />
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control", "v-model" => "emailValue", "@input" => "$v.emailValue.$touch()", "@change" => "fieldClass('user_email')" %>
      <div v-if="$v.emailValue.$dirty">
        <p class="alert-danger" v-if="!$v.emailValue.required">The email field is required!</p>
        <p v-if="!$v.emailValue.email">The input must be a proper email!</p>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :contraseÃ±a %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      <% if @validatable %>
        <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :confirmar_contraseÃ±a %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>
    <%= render "devise/shared/links" %>
    <hr>
    <div class="actions">
      <%= f.submit "Sign up", class: 'btn-primary' %>
    </div>
    <br>
    <% end %>
    </div>
  </div>
  </div>
</div>
