<%= render 'shared/card',has_return: true, breadcrumbs: {crumbs: [], active_label: "Tipo licencia"} do %>
<div class="row">
  <div class="col-lg-12">
    <%= link_to(new_licence_type_path, class: 'btn btn-primary') do%>
     <%= icon('fas','plus', 'Agregar') %>
     <% end %>
  </div>
</div>
<% if @licence_types.empty? %>
  <br>
  <div class="alert alert-info">
    <strong>&iexcl;Atenci&oacute;n!</strong>
      Aun no se registran tipos de licencia, has clic en el bot&oacute;n <%= fw_icon('plus') %> para agregar la primera.
  </div>
<% else %>
<div class="row">
    <div class="col-lg-12">
      <br>
      <h5>Listado de tipo de licencias registradas</h5>
      <br>
      <div class="table-responsive">
        <table class="table table-condensed">
          <thead>
            <tr>
              <th width='10%'></th>
              <th width='25%'>Categoria</th>
              <th width='25%'>Vehiculos permitidos</th>
              <th width='25%'>Tipo de servicio</th>
              <th width='25%'>Horas practicas</th>
              <th width='25%'>Costo licencia</th>
            </tr>
          </thead>
          <tbody>
            <% @licence_types.each do |licence_type| %>
                <tr>
                  <td>
                    <%= link_to(edit_licence_type_path(licence_type), class: 'btn btn-outline-dark btn-sm') do %>
                      <%= icon('fas', 'pencil-alt', 'editar') %>
                    <% end %>
                  </td>
                  <td><%= licence_type.category %></td>
                  <td><%= licence_type.allowed_vehicles %></td>
                  <td><%= licence_type.service_type %></td>
                  <td><%= licence_type.practical_hours %></td>
                  <td><%= number_to_currency(licence_type.licence_cost) %></td>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
<% end %>
