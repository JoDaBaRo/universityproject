<% if @licences.empty? %>
  <br>
  <div class="alert alert-info">
    <strong>&iexcl;Atenci&oacute;n!</strong>
      Aun no se registran licencias, has clic en el bot&oacute;n <%= fw_icon('plus') %> para agregar la primera.
  </div>
<% else %>
<div class="row">
    <div class="col-lg-12">
      <br>
      <h5>Listado de licencias registradas</h5>
      <hr>
      <div class="table-responsive">
        <table class="table table-condensed">
          <thead>
            <tr>
              <th width='3%'></th>
              <th width='25%'>Categoria</th>
              <th width='25%'>Vehiculos permitidos</th>
              <th width='25%'>Tipo de servicio</th>
            </tr>
          </thead>
          <tbody>
            <% @licences.each do |licence| %>
              <tr>
                <td><%= licence.licence_type.category %></td>
                <td><%= licence.licence_type.allowed_vehicles %></td>
                <td><%= licence.licence_type.service_type %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
