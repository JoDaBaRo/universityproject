<%= render 'shared/card',has_return: true, breadcrumbs: {crumbs: [], active_label: "Estudiantes"} do %>
<% if @students.empty? %>
  <br>
  <div class="alert alert-info">
    <strong>&iexcl;Atenci&oacute;n!</strong>
      Aun no se registran estudiantes, has clic en el bot&oacute;n <%= fw_icon('plus') %> para agregar el primero.
  </div>
<% else %>
<div class="row">
    <div class="col-lg-12">
      <br>
      <h5>Listado de estudiantes registrados</h5>
      <br>
      <div class="table-responsive">
        <table class="table table-condensed">
          <thead>
            <tr>
              <th width="3%"></th>
              <th width="3%"></th>
              <th width="4%"></th>
              <th width='25%'>Nombre</th>
              <th width='25%'>Apellido</th>
              <th width='25%'># identificacion</th>
            </tr>
          </thead>
          <tbody>
            <% @students.each do |student| %>
              <tr>
                <td >
                  <%= link_to(student_enrollments_path(student), class: 'btn btn-outline-dark btn-sm' ) do %>
                    <%= icon('fas', 'book', 'Matriculas') %>
                  <% end %>
                </td>
                <td>
                  <%= link_to(student_student_licences_path(student), class: 'btn btn-outline-dark btn-sm') do %>
                    <%= icon('fas', 'address-card', 'licencias') %>
                  <% end %>
                </td>
                <td>
                  <%= link_to(edit_person_path(student.person), class: 'btn btn-outline-dark btn-sm') do %>
                    <%= icon('fas', 'book', 'Editar') %>
                  <% end %>
                </td>
                <td><%= student.person.name %></td>
                <td><%= student.person.last_name %></td>
                <td><%= student.person.id_number %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
<% end %>
