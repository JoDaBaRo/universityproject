<% if @teachers.empty? %>
  <br>
  <div class="alert alert-info">
    <strong>&iexcl;Atenci&oacute;n!</strong>
      Aun no se registran profesores, has clic en el bot&oacute;n <%= fw_icon('plus') %> para agregar el primero.
  </div>
<% else %>
<div class="row">
    <div class="col-lg-12">
      <br>
      <h5>Listado de profesores registrados</h5>
      <hr>
      <div class="table-responsive">
        <table class="table table-condensed">
          <thead>
            <tr>
              <th width='3%'></th>
              <th width='25%'>Nombre</th>
              <th width='25%'>Apellido</th>
              <th width='25%'># identificacion</th>
              <th width='20%'># telefonico</th>
            </tr>
          </thead>
          <tbody>
            <% @teachers.each do |teacher| %>
              <tr>
                <td><%= teacher.person.name %></td>
                <td><%= teacher.person.last_name %></td>
                <td><%= teacher.person.id_number %></td>
                <td><%= teacher.phone_number %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
