<% if @vehicles.empty? %>
  <br>
  <div class="alert alert-info">
    <strong>&iexcl;Atenci&oacute;n!</strong>
      Aun no se registran vehiculos, has clic en el bot&oacute;n <%= fw_icon('plus') %> para agregar el primero.
  </div>
<% else %>
<div class="row">
    <div class="col-lg-12">
      <br>
      <h5>Listado de vehiculos registrados</h5>
      <hr>
      <div class="table-responsive">
        <table class="table table-condensed">
          <thead>
            <tr>
              <th width='3%'></th>
              <th width='25%'>Placa</th>
              <th width='25%'>Nombre</th>
              <th width='25%'>Marca</th>
              <th width='20%'>AÃ±o del modelo</th>
            </tr>
          </thead>
          <tbody>
            <% @vehicles.each do |vehicle| %>
              <tr>
                <td><%= vehicle.plate %></td>
                <td><%= vehicle.name %></td>
                <td><%= vehicle.brand %></td>
                <td><%= vehicle.model_year %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
